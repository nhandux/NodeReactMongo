<div class="container">
  <div class="row">
    <div class="col-md-6">
      
      <form action="/admin/category/form" method="POST" class="form-horizontal" role="form">
          <input type="hidden" name="_id" value="{{category._id}}"/>
          <div class="form-group">
            <legend>Category Form</legend>
          </div>
          <div class="form-group">
            <div class="form-item">
              <label>Name:</label>
              <input type="text" name="name" id="input" class="form-control" value="{{category.name}}">
              {{#if category.nameError}}
                <font color="red"><small>{{category.nameError}}</small></font>
              {{/if}}
            </div>
            <br/>
            <div class="form-item">
              <label>Slug:</label>
              <input type="text" name="slug" id="input" class="form-control" value="{{ category.slug }}">
              {{#if category.slugError}}
                <font color="red"><small>{{category.slugError}}</small></font>
              {{/if}}
            </div>
             <br/>
            <div class="form-item">
              <label>Active:</label> &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
              <label style="font-weight: normal"><input type="radio" name="is_active"  checked="" value="1"> active</label>
              &nbsp; &nbsp; &nbsp;
              <label style="font-weight: normal"><input type="radio" name="is_active"  value="0"> no active</label>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-10 col-sm-offset-2">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </div>
      </form>
      
    </div>
  </div>
</div>